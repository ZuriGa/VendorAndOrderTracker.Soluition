<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <title>Vendor and Order Tracker</title>
  <link rel="stylesheet" href="~/css/styles.css">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
</head>

<body>
  <img src="~/img/bakery.jpeg">

  <div class="container">
    @using VendorAndOrderTracker.Models;

    <h1>Orders List ✔️</h1>

    <ol>
      @foreach (Order order in (List<Order>)@Model["orders"])
      {
        <a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>
          <li><h5>@order.Title</h5></li>
        </a>
      }
    </ol>
  </div>
  <div class="center">
    <a href='/vendors/@Model["vendor"].Id/orders/neworder'><button type="submit" class="btn btn-outline-dark btn-lg">Add a new order</button></a>
    <a href='/vendors'><button type="submit" class="btn btn-outline-dark btn-lg">Return to vendor list</button></a>
    <a href='/'><button type="submit" class="btn btn-outline-dark btn-lg">Return to Main Page</button></a>
  </div>

</body>

</html>