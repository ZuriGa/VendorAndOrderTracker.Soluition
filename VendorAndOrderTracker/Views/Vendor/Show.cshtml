<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Vendor and Order Tracker</title>
    <link rel="stylesheet" href="~/css/styles.css">
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" 
      crossorigin="anonymous">
  </head>
  <body>
  
    @using VendorAndOrderTracker.Models;

    <h3>Here are all the orders for this vendor:</h3>

    <ol>
    @foreach (Order order in @Model["orders"])
    {
      @* <li><a href='/vendors/@Model["orders"].Id/orders/@orders.Id'>@vendor.Description</a></li> *@
      <li>@order.Title - @order.Description - @order.Price</li>
    }
    </ol>

    <p><a href='/vendors/@Model["category"].Id/orders/new'>Add a new item</a></p>
    <p><a href='/vendors'>Return to category list</a></p>
    <p><a href='/'>Return to Main Page</a></p>
  </body>
</html>